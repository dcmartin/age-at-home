##
## FROM https://docs.docker.com/engine/installation/linux/docker-ce/ubuntu/
##

# remove all old dockers
apt-get remove docker docker-engine docker.io

# update
apt-get update

# Install packages to allow apt to use a repository over HTTPS:
apt-get install \
    apt-transport-https \
    ca-certificates \
    curl \
    software-properties-common

# add dockers's official GPG key
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | apt-key add -

# verify
sudo apt-key fingerprint 0EBFCD88

# add docker repository
add-apt-repository \
   "deb [arch=amd64] https://download.docker.com/linux/ubuntu \
   $(lsb_release -cs) \
   stable"

# update
apt-get update

apt-get install docker-ce

## 
## FROM: https://github.com/NVIDIA/nvidia-docker
##
## https://github.com/nvidia/nvidia-docker/wiki/Installation-(version-2.0)
##

# driver from /XFree86/Linux-x86_64/384.98/NVIDIA-Linux-x86_64-384.98.run

# If you have nvidia-docker 1.0 installed: we need to remove it and all existing GPU containers
docker volume ls -q -f driver=nvidia-docker | xargs -r -I{} -n1 docker ps -q -a -f volume={} | xargs -r docker rm -f
sudo apt-get purge -y nvidia-docker

# Add the package repositories
curl -s -L https://nvidia.github.io/nvidia-docker/gpgkey | \
  sudo apt-key add -
curl -s -L https://nvidia.github.io/nvidia-docker/ubuntu16.04/amd64/nvidia-docker.list | \
  sudo tee /etc/apt/sources.list.d/nvidia-docker.list
sudo apt-get update

# Install nvidia-docker2 and reload the Docker daemon configuration
sudo apt-get install -y nvidia-docker2
sudo pkill -SIGHUP dockerd

# Test nvidia-smi with the latest official CUDA image
docker run --runtime=nvidia --rm nvidia/cuda nvidia-smi
